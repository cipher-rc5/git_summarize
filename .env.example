# Environment Variables Configuration
# Copy this file to .env and update with your values
# Note: Command-line arguments take precedence over environment variables

# ClickHouse Connection
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_DATABASE=lazarus_research
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=

# Alternative: Full URL format
# CLICKHOUSE_URL=http://localhost:8123

# Repository Configuration
REPOSITORY_URL=https://github.com/tayvano/lazarus-bluenoroff-research
REPOSITORY_LOCAL_PATH=./data_repo
REPOSITORY_BRANCH=main
REPOSITORY_SYNC_ENABLED=true

# Processing Configuration
PROCESSING_MAX_FILE_SIZE=10485760
PROCESSING_NORMALIZE_MARKDOWN=true
PROCESSING_MAX_HEADING_LEVEL=3
PROCESSING_INCLUDE_PATTERNS=*.md
PROCESSING_EXCLUDE_PATTERNS=

# Pipeline Configuration
PIPELINE_PARALLEL_WORKERS=4
PIPELINE_FORCE_REPROCESS=false
PIPELINE_MAX_FILE_SIZE_MB=10

# Database Batch Configuration
DATABASE_BATCH_SIZE=1000

# Extraction Toggles
EXTRACTION_CRYPTO_ADDRESSES=true
EXTRACTION_INCIDENTS=true
EXTRACTION_IOCS=true

# Logging Configuration
RUST_LOG=info
RUST_BACKTRACE=1

# Performance Tuning
TOKIO_WORKER_THREADS=4

# Optional: Authentication for private repositories
# GIT_USERNAME=
# GIT_PASSWORD=
# GIT_SSH_KEY_PATH=

# Optional: TLS/SSL for ClickHouse
# CLICKHOUSE_TLS_ENABLED=false
# CLICKHOUSE_TLS_CA_CERT_PATH=
# CLICKHOUSE_TLS_CLIENT_CERT_PATH=
# CLICKHOUSE_TLS_CLIENT_KEY_PATH=

# Development Settings
# RUST_LOG=debug,lazarus_ingest=trace
# RUST_BACKTRACE=full
